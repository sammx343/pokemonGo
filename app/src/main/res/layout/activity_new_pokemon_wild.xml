<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_new_pokemon_wild"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sammx343.probepokemongo.NewPokemonWild">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="281dp"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="143dp"
                android:layout_height="293dp"
                android:weightSum="1">

                <TextView
                    android:text="TextView"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/myPokemonName" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/myPokemonAttack"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/myPokemonDefense"
                    android:textSize="18sp"
                    android:layout_margin="10dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/myPokemonSpeed"
                    android:textSize="18sp"
                    android:layout_margin="10dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/myPokemonHP"
                    android:textSize="18sp"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="225dp"
                android:layout_height="245dp"
                android:weightSum="1">

                <Button
                    android:text="liberar Pokemon"
                    android:layout_width="138dp"
                    android:layout_height="62dp"
                    android:id="@+id/button8"
                    android:onClick="liberatePokemon"/>

                <ImageView
                    android:layout_width="156dp"
                    android:layout_height="201dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/myPokemonImage" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="116dp">

            <Button
                android:text="ATRÃS"
                android:onClick="Atras"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/button7" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
